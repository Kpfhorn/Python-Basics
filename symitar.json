{
    "scopeName": "text.symitar.episys",
    "firstLineMatch": "^[1-9][0-9][0-9]~",
    "foldingStartMarker": "^[1-9][0-9][0-9]~",
    "patterns": [
        {
            "match": "^([1-9][0-9][0-9])~",
            "captures": {
                "1": { "name": "entity.name.type.record.symitar"}
            }
        },
        {
            "match": "(~)([0-9][0-9])(.+)(~|`)",
            "captures": {
                "1": { "name": "keyword.operator.delimiter.symitar"},
                "2": { "name": "variable.parameter.field.symitar"},
                "3": { "name": "content.symitar"}
            }
        }
    ]
}